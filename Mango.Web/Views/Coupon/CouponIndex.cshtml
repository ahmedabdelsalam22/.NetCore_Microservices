@model IEnumerable<CouponDTO>
@{
    ViewData["Title"] = "CouponIndex";
}

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>CouponId</th>
            <th>CouponCode</th>
            <th>DiscountAmount</th>
            <th>MinAmount</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach(CouponDTO n in Model)
        {
            <tr>
                <td>@n.CouponId</td>
                <td>@n.CouponCode</td>
                <td>@n.DiscountAmount$</td>
                <td>@n.MinAmount$</td>
                <td>
                    <button type="submit" class="btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>

</table>
