@using Mango.FrontEnd.Models.Dtos;
@model LoginRequestDTO
@{
    ViewData["Title"] = "Login";
}

<form class="container border p-4" method="post" asp-action="Login">
    <div class="row text-center">
        <h1>Login</h1>
    </div>
    <div class="row-text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="UserName" class="form-control" placeholder="username.."/>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="Password" class="form-control" placeholder="password.." />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <button type="submit" value="Submit" class="form-control btn btn-success">Login</button>
        </div>
    </div>
</form>


@section Scripts{
    <Partial name="_ValidationScriptsPartial" />
}